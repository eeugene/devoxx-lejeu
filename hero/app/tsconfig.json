{
  "compilerOptions": {
    "outDir": "./dist/",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "e2e",
    "build",
    "dist"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
